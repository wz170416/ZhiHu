<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/vx_img"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_alignTop="@id/vx_img"
                    android:layout_toRightOf="@id/vx_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vx_author"
                    android:text="阿斯顿发射点"
                    android:layout_margin="10dp"/>
                <TextView
                    android:text="asdf"
                    android:layout_below="@id/vx_author"
                    android:layout_toRightOf="@id/vx_img"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vx_time"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vx_lap"
                    android:layout_below="@id/vx_author"
                    android:layout_toRightOf="@id/vx_time"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:layout_alignTop="@id/vx_author"
                    android:id="@+id/vx_count"/>
                <ImageView
                    android:layout_alignTop="@id/vx_author"
                    android:src="@mipmap/ic_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/vx_count"
                    android:id="@+id/vx_msg"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_alignTop="@id/vx_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vx_tab"
                    android:background="@drawable/tb_bg"
                    android:layout_toLeftOf="@id/vx_msg"
                    android:layout_margin="5dp"/>
            </RelativeLayout>

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vx_title"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:layout_below="@id/rl"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
